<!-- ======= Header ======= -->
<header id="header" class="fixed-top">
	<div class="container d-flex align-items-center justify-content-between">

		<h1 class="logo">Candidat :
			<a href="{{ path('app_profile') }}" class="profile-link">
				{% if app.user %}
					{{ app.user.firstname }}
				{% endif %}
			</a>
		</h1>
		<!-- Uncomment below if you prefer to use an image logo -->
		<!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

		<nav id="navbar" class="navbar">
			<ul>


				<li>
					<a class="nav-link scrollto active" href="{{ path('psycho_new') }}">Test Psychologique</a>
				</li>

				{% if app.user.poste == 'Developpeur web' %}
					<li>
						<a class="nav-link scrollto active" href="{{ path('evaluation_new') }}">Auto Evaluation</a>
					</li>
				{% endif %}

				{% if showProfilPosteLink %}
					<li>
						<a class="nav-link scrollto active" href="{{ path('app_profilposte') }}">Profil poste</a>
					</li>
				{% endif %}

				{% if showCommencerTestLink %}
					<li>
						<a class="nav-link scrollto active" href="{{ path('app_test') }}">Test géneral</a>
					</li>
				{% endif %}

				<li>
					<a class="nav-link scrollto active" href="{{ path('app_profile') }}">Informations</a>
				</li>
				<li>
					<a class="getstarted scrollto" href="{{ path('app_logout') }}">Me déconnecter</a>
				</li>
			</ul>
			<i class="bi bi-list mobile-nav-toggle"></i>
		</nav>
		<!-- .navbar -->

	</div>
</header>
<!-- End Header -->
