{% extends "admin/base.html.twig" %}

{% block title %}Liste des questions
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="h3 mb-4 text-gray-800">Liste des questions</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Categorie</th>
					<!-- Add the Category column -->
					<th>Question</th>
					<th>Actions</th>
					<!-- Rename 'actions' to 'Actions' for consistency -->
				</tr>
			</thead>
			<tbody>
				{% for question in questions %}
					<tr>
						<td>{{ question.id }}</td>
						<td>{{ question.category.name }}</td>
						<!-- Access the name property of the category -->
						<td>{{ question.questiontext }}</td>
						<td>
							<div class="d-flex">
								<a class="btn btn-success rounded mr-2" href="{{ path('app_question_edit', {'id': question.id}) }}">Modifier</a>
								{{ include('question/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
						<!-- Increase colspan to match the number of columns -->
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
