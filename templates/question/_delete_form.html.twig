<form method="post" action="{{ path('app_question_delete', {'id': question.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet question ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
