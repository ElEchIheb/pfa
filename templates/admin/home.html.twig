{% extends "admin/base.html.twig" %}

{% block body %}
	<!-- Begin Page Content -->
	<div
		class="container-fluid">

		<!-- Page Heading -->
		<h1 class="h3 mb-4 text-gray-800">
			<div class="alert alert-info" role="alert">
				<p>Vous êtes connecté
					<a href="{{ path('app_profile') }}" class="btn btn-primary">
						{% if app.user %}
							{{ app.user.firstname }}
						{% endif %}
					</a>
				</p>
			</div>


		</h1>
		<div class="container">
			<div class="row">
				<div class="col-sm-6">
