{% extends "admin/base.html.twig" %}

{% block title %}Resultat Profil Poste
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="h3 mb-4 text-gray-800">Resultat Profil Poste</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
                    <th>User email</th>
					<th>Score (%)</th>
					<th>Resultat</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for profilposte_resultat in profilposte_resultats %}
					<tr>
						<td>{{ profilposte_resultat.id }}</td>
                        <td>{{ profilposte_resultat.user.email }}</td>
						<td>{{ profilposte_resultat.score }}</td>
						<td>
							{% if profilposte_resultat.resultat %}
								<a class="btn btn-primary" href="{{ path('profilposte_show', {'filename': profilposte_resultat.resultat}) }}" target="_blank">
									<i class="fa fa-eye"></i>
								</a>
							{% else %}
								N/A
							{% endif %}
						</td>
						<td>
							    {{ include('profilposte_resultat/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
